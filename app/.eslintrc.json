{
  "extends": [
    "airbnb",
    "next/core-web-vitals"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", "ts", "tsx"] }],
    "import/extensions": [
      2,
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/pages/**/*.tsx"],
      "rules": {
        "no-use-before-define": [
          "error",
          { "functions": false }
        ]
      }
    }
  ]
}
